<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/cardview_dark_background">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:layout_gravity="center"
        android:text="RENTAR" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:text="Elige una placa" />

    <Spinner
        android:background="@color/white"
        android:layout_marginTop="5dp"
        android:id="@+id/spinner"
        android:layout_gravity="center"
        android:layout_width="100dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:text="Elige la fecha inicial" />

    <Button
        android:id="@+id/buttonFechaInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Fecha Inicial" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:text="Elige la fecha final" />

    <Button
        android:id="@+id/buttonFechaFinal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Fecha Final" />


    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="Tu numero de renta es" />

        <TextView

            android:id="@+id/textViewRentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:text="TextView" />

    </LinearLayout>

    <Button
        android:layout_marginTop="50dp"
        android:id="@+id/buttonGuardar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:text="Guardar" />


    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/buttonReturnCar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/teal_700"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:text="Retornar un carro" />

</LinearLayout>
